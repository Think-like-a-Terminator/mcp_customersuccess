# Authentication Settings
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=customer_success
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# AWS SES Configuration (Optional, if you want to use AWS SES for sending emails)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

# SMTP Email Configuration (Optional, if you want to use SMTP for sending emails)
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_FROM_EMAIL=reports@example.com
SMTP_USE_TLS=false
# SMTP_USERNAME=your-smtp-username  # Optional
# SMTP_PASSWORD=your-smtp-password  # Optional

# Server Settings
SERVER_NAME=customer-success-mcp
SERVER_VERSION=0.1.0
